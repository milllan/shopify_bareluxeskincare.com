<div class="swiper-container">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            <div class="swiper-slide">
                <div class="review-block cursor-[grab] select-none px-[15px] md:px-0" {{ block.shopify_attributes }} data-index={{ forloop.index0 }}>
                    <div class="bg-white py-12 px-4 md:px-9 text-center rounded-[5px]">
                        {% if section.settings.show_stars %}
                            <div class="stars flex mb-[18px] justify-center">
                                {%- for i in (1..5) -%}
                                    <span class="star">{%- render 'icon', name: 'star-solid', size: 'small' -%}</span>
                                {%- endfor -%}
                            </div>
                        {% endif %}

                        <h3 class="text-xl mb-2.5 font-medium not-change">{{ block.settings.title }}</h3>
                        <div class="mb-6 text-color-subtext rte not-change">{{ block.settings.description }}</div>
                        <div class="not-change">{{ block.settings.footer }}</div>

                        {% if block.settings.image != blank %}
                            {% if block.settings.image_link != blank %}<a href="{{ block.settings.image_link | default: '#' }}">{% endif %}
                            <div class="mt-[18px] block cursor-pointer hover:text-color-subtext" style="--image-width: 3rem;">
                                {% render 'responsive-image', image: block.settings.image, wrapper_class: 'w-12 mx-auto' %}
                                <div class="mt-2.5 text-sm not-change">
                                    {{ block.settings.image_text }}
                                </div>
                            </div>
                            {% if block.settings.image_link != blank %}</a>{% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% render 'slider-controls', show_nav: section.settings.show_navigation, show_pagination: section.settings.show_pagination, absolute: true, container: section.settings.container %}
