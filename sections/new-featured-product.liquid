{{ 'product.css' | asset_url | stylesheet_tag }}
{{ 'featured-product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign product = all_products[section.settings.featured_product]
  assign first_3d_model = product.media | where: "media_type", "model" | first

  if product == empty
    assign section_onboarding = true
  endif

  assign bg_color = section.settings.background_color
  assign has_bg = false

  unless bg_color == "rgba(0,0,0,0)" or bg_color == blank
    assign has_bg = true
  endunless

  assign image_placement = section.settings.image_placement

  capture is_preorder
    render 'check-preorder', product: product
  endcapture
  if is_preorder == "true"
    assign is_preorder = true
  else
    assign is_preorder = false
  endif

  if is_preorder
    assign preorder = product.metafields.foxkit.preorder
  endif
-%}

{%- if first_3d_model -%}
  <link
    id="ModelViewerStyle"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}

{% capture onboarding %}
  <div class="sf-prod__info-wrapper h-full relative">
    <div class="sf-prod__info">
      <a class="prod__title text-2xl md:text-3xl leading-10 font-medium mt-5 mb-2" href="#">
        {{ 'homepage.onboarding.product_title' | t }}
      </a>
      <div class="prod_prices mt-2 mb-8 flex items-center">
        <span class="text-xl prod__price sf-currency">
          {{ 1999 | money }}
        </span>
      </div>
      <div class="prod__description leading-7 text-base mt-4 mb-8">
        {{ 'homepage.onboarding.product_description' | t }}
      </div>
      <div class="flex flex-wrap mb-5">
        <button type="submit" class="add-to-cart sf__btn sf__btn-primary flex-grow shrink relative">
          <span>{{ 'products.product.add_to_cart' | t }}</span>
        </button>
      </div>
    </div>
  </div>
{% endcapture %}

<div
  id="sf__featured-product-{{ section.id }} dungpv"
  data-section-type="featured-product"
  data-section-id="{{ section.id }}"
  class="sf-featured-product sf-section-padding {{ section.settings.custom_class }} {{ first_3d_model }}"
  {% if has_bg %}
    data-bg="{{ bg_color | color_to_hsl }}"
  {% endif %}
  data-preorder="{{ is_preorder }}"
  {% if is_preorder %}
    data-preorder-active="{{ preorder.active }}"
    data-preorder-discount="{{ preorder.discount_value }}"
    data-preorder-discount-type="{{ preorder.discount_type }}"
    data-preorder-discount-active="{{ preorder.active_discount }}"
    data-preorder-show-eta="{{ preorder.show_eta }}"
    data-preorder-eta="{{ preorder.eta }}"
    data-preorder-set-end-time="{{ preorder.set_end_time }}"
    data-preorder-end-time="{{ preorder.end_time }}"
    data-preorder-start-time="{{ preorder.start_time }}"
  {% endif %}
  style="
    background-color: {{ bg_color }};
    --column-gap: {{ section.settings.column_gap }}px;
    --column-gap-mobile: {{ section.settings.column_gap_mobile }}px;
    --row-gap-mobile: 30px;
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="{{ section.settings.container }}{% if has_bg == false %} section-my{% else %} section-py{% endif %}">
    <div
      class="sf-grid flex flex-wrap md:flex-nowrap sf-product-wrapper sf-prod__block{% if image_placement == 'right' %} flex-row-reverse{% endif %}"
      data-view="featured-product"
    >
      <div class="sf-column w-full md:w-1/2">
        {% unless section_onboarding %}
          {% render 'product-media', section: section, media_layout: 'layout-4', product: product %}
        {% else %}
          <div style="--aspect-ratio: 1/1;">
            {{ 'product-1' | placeholder_svg_tag: 'sf__placeholder-svg object-cover w-full h-full' }}
          </div>
        {% endunless %}
      </div>
      <div class="sf-column w-full md:w-1/2 sf-prod__info">
        {% if section_onboarding %}
          {{ onboarding }}
        {% else %}
          {% render 'main-product-blocks', product: product, section: section, update_browser_history: false %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% if product.media.size > 0 %}
  <script src="{{ 'product-media.min.js' | asset_url }}" defer="defer"></script>
{% endif %}
{%- if first_3d_model -%}
  <script src="{{ 'product-model-new.min.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{% if product.options_with_values.size > 0 %}
  <script src="{{ 'variant-picker.min.js' | asset_url }}" defer="defer"></script>
{% endif %}

